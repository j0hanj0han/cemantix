<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN"
  "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <key>Label</key>
  <string>io.cemantix.daily</string>

  <key>ProgramArguments</key>
  <array>
    <string>/bin/bash</string>
    <string>/Users/johan.chapelain@dataiku.com/Documents/code/cemantix/run_daily.sh</string>
  </array>

  <!-- Lancement chaque jour à 08h05 (heure locale) -->
  <key>StartCalendarInterval</key>
  <dict>
    <key>Hour</key>
    <integer>8</integer>
    <key>Minute</key>
    <integer>5</integer>
  </dict>

  <!-- Si le Mac était éteint à l'heure prévue, lancer au prochain démarrage -->
  <key>RunAtLoad</key>
  <false/>

  <key>StandardOutPath</key>
  <string>/Users/johan.chapelain@dataiku.com/Documents/code/cemantix/run_daily.log</string>

  <key>StandardErrorPath</key>
  <string>/Users/johan.chapelain@dataiku.com/Documents/code/cemantix/run_daily.log</string>
</dict>
</plist>
